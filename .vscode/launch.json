    "version": "0.2.0",
    "configurations": [
        {
            "name": "Register database",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/main.go",
            "args": [
                "register-database",
                "--no-interactive",
                "--type",
                "1",
                "--name",
                "dev",
                "--user",
                "dev",
                "--password",
                "abigpassword",
                "--disable-update-check"
            ]
        },
        {
            "name": "Register storage",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/main.go",
            "args": [
                "register-storage",
                "--no-interactive",
                "--type",
                "2",
                "--name",
                "dev",
                "--bucket-name",
                "dev",
                "--account-id",
                "abigpassword",
                "--access-key-id",
                "sdsda",
                "--access-key-secret",
                "sdsdsdad",
                "--endpoint",
                "dsd",
                "--disable-update-check"
            ]
        },
        {
            "name": "backup",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/main.go",
            "args": [
                "backup",
                "--disable-update-check",
                "--name",
                "dev",
            ]
        }
    ]
}